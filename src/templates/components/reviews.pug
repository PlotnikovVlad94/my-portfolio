script(type="text/x-template")#reviews-container
  .container.reviews__container
    .reviews__scroll
      h2.section-title.reviews__title Что обо мне говорят
      .reviews__scroll-btns
        button(type="button" @click="previous()").reviews__btn.reviews__btn--prev
        button(type="button" @click="next()").reviews__btn.reviews__btn--next
    flickity(ref="flickity" :options="flickityOptions" v-if="Object.keys(reviews).length > 0").reviews__switcher
      .carousel-cell(v-for="review in reviews" :key="review.id")
        .review                 
          .reviews__box
            p.reviews__text {{review.text}}
            .reviews__author
              .reviews__avatar
                img(:src="review.photo" class="author__avatar")
              .author-info
                .author-name {{review.author}}
                .author-position {{review.occ}}